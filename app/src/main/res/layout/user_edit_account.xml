<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            app:srcCompat="@drawable/logo" />

        <View
            android:id="@+id/viewLinear"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/imageLogo"
            android:background="@color/colorGreen" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutBottom"
        android:layout_below="@+id/layoutTop"
        android:background="@color/colorLightGrey">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:textColor="@color/colorGreen"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:text="Аккаунт"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/text"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="Вы можете отредактировать свои данные"/>

                <ImageView
                    android:id="@+id/imageUser"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/text2"
                    android:layout_marginTop="0dp"
                    android:background="@color/colorWhite"
                    app:srcCompat="@drawable/human"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageUser"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:text="Имя"/>
                <EditText
                    android:id="@+id/textName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/text1"
                    android:layout_marginTop="0dp"
                    android:textSize="20sp"
                    android:hint="Имя" />
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textName"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:text="Фамилия"/>
                <EditText
                    android:id="@+id/textSurname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/text3"
                    android:layout_marginTop="0dp"
                    android:textSize="20sp"
                    android:hint="Фамилия" />
                <TextView
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textSurname"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:text="Логин"/>
                <EditText
                    android:id="@+id/textLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/text4"
                    android:layout_marginTop="0dp"
                    android:textSize="20sp"
                    android:hint="Логин" />
                <TextView
                    android:id="@+id/text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textLogin"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:text="E-mail"/>
                <EditText
                    android:id="@+id/textEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/text5"
                    android:layout_marginTop="0dp"
                    android:textSize="20sp"
                    android:hint="E-mail" />
                <TextView
                    android:id="@+id/text6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textEmail"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:text="Пароль"/>
                <EditText
                    android:id="@+id/textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/text6"
                    android:layout_marginTop="0dp"
                    android:textSize="20sp"
                    android:password="true"
                    android:hint="Пароль" />
                <EditText
                    android:id="@+id/textPasswordTuo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/textPassword"
                    android:layout_marginTop="0dp"
                    android:textSize="20sp"
                    android:password="true"
                    android:hint="Повтроите пароль" />

                <Button
                    android:id="@+id/buttonEnter"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:layout_below="@+id/textPasswordTuo"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/colorGreen"
                    android:text="Сохранить изменения"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">
        <View
            android:id="@+id/viewLinear1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGreen" />

        <LinearLayout
            android:id="@+id/layoutNavigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/viewLinear1">

            <LinearLayout
                android:id="@+id/layoutShop"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:srcCompat="@drawable/shop" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutBasket"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:srcCompat="@drawable/basket" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutHuman"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/rounded">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/human" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutMenuBrash"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/menu_bars" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>