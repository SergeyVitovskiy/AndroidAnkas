<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="26sp"
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:text="Заказ"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/imageLogo"
                android:background="@color/colorGreen" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Выбирите способ оплаты"/>
            <Spinner
                android:id="@+id/spinnerPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/textPaymentMethod"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Выбирите тип доставки"/>
            <Spinner
                android:id="@+id/spinnerDeliveryMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/textPaymentMethod"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Оставте коментарий"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="10"
                android:gravity="top"
                android:hint="Коментарий к заказу"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorGreen"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Подтвердить заказ"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>